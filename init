#!/usr/bin/env python3

import subprocess
import os

print("Initializing...")

#Download terrier from git and change commit version
subprocess.run("git clone https://github.com/terrier-org/terrier-core".split())
curr_dir = os.getcwd()
os.chdir("{}/terrier-core".format(curr_dir))
subprocess.run("git reset --hard 02ade08b283473dbc1111471f700e04136087638".split())

#install using mvn
mvn clean install
